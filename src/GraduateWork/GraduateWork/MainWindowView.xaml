<Window x:Class="GraduateWork.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraduateWork"
        xmlns:userControls="clr-namespace:UserControls;assembly=UserControls"
        mc:Ignorable="d"
        Title="MainWindowView" Height="600" Width="900" WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="PanelItem" TargetType="StackPanel">
            <Setter Property="Background" Value="#1f2933"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="#213445"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <userControls:MoveControl Grid.Row="0" Grid.ColumnSpan="2" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDownuseLeftButtonDown" >
        </userControls:MoveControl>
        <Image  Style="{DynamicResource CloseIcon}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"  Source="Icons/CloseIcons.png" MouseLeftButtonDown="CloseWindow" />
        <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDownuseLeftButtonDown" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Canvas Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" Background="#1f2933" ></Canvas>
            <Grid  Grid.Column="0" Grid.Row="1" Margin="0,0,0,5">
                <Button Command="{Binding AddNewOrderCommand}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Style="{DynamicResource PanelItem}">
                                <Image Source="Icons/Plus.png"  Height="80"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid  Grid.Column="0" Grid.Row="2" Margin="0,0,0,5">
                <Button Command="{Binding AddNewOrderCommand}">
                    <Button.Template>
                        <ControlTemplate >
                            <StackPanel Style="{DynamicResource PanelItem}">
                                <Image  Source="Icons/List.png" VerticalAlignment="Center" Height="80" />
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid  Grid.Column="0" Grid.Row="3" Margin="0,0,0,5">
                <Button Command="{Binding AddNewOrderCommand}">
                    <Button.Template>
                        <ControlTemplate >
                            <StackPanel Style="{DynamicResource PanelItem}">
                                <Image  Source="Icons/Settings.png" VerticalAlignment="Center" Height="80" />
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </Grid>

        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding CurrentUserControl}"/>

    </Grid>
</Window>
