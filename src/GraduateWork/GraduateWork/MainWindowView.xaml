<UserControl x:Class="GraduateWork.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraduateWork"
        xmlns:userControls="clr-namespace:UserControls;assembly=UserControls"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="500">
    <UserControl.Resources>
        <Style x:Key="PanelItem" TargetType="StackPanel">
            <Setter Property="Background" Value="#1f2933"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="#213445"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Canvas Grid.Column="0" Grid.Row="0" Grid.RowSpan="6" Background="#1f2933" ></Canvas>
            <Grid  Grid.Column="0" Grid.Row="1" Margin="0,0,0,5">
                <Button Command="{Binding AddNewExaminationCommand}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Style="{DynamicResource PanelItem}">
                                <Image Source="Icons/Plus.png"  Height="40"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid  Grid.Column="0" Grid.Row="2" Margin="0,0,0,5">
                <Button Command="{Binding OrdersCommand}">
                    <Button.Template>
                        <ControlTemplate >
                            <StackPanel Style="{DynamicResource PanelItem}">
                                <Image  Source="Icons/List.png" VerticalAlignment="Center" Height="60" />
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid  Grid.Column="0" Grid.Row="3" Margin="0,0,0,5">
                <Button Command="{Binding AddNewOrderCommand}">
                    <Button.Template>
                        <ControlTemplate >
                            <StackPanel Style="{DynamicResource PanelItem}">
                                <Image  Source="Icons/Settings.png" VerticalAlignment="Center" Height="60" />
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid  Grid.Column="0" Grid.Row="4" Margin="0,0,0,5">
                <Button Command="{Binding ClientListCommand}">
                    <Button.Template>
                        <ControlTemplate >
                            <StackPanel Style="{DynamicResource PanelItem}">
                                <Image  Source="Icons/List.png" VerticalAlignment="Center" Height="60" />
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>

        <ContentPresenter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding CurrentUserControl}" Margin="5,0,-5,0"/>
    </Grid>
</UserControl>
