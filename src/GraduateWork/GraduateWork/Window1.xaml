    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid Background="Chartreuse" Grid.RowSpan="3" MouseLeftButtonDown="LeftOnLeftButtonDown" MouseLeftButtonUp="LeftOnMouseLeftButtonUp" MouseMove="LeftOnMouseMove"/>
        <Grid Background="Chartreuse" Grid.ColumnSpan="3" MouseLeftButtonDown="TopOnLeftButtonDown" MouseLeftButtonUp="TopOnMouseLeftButtonUp" MouseMove="TopOnMouseMove"></Grid>
        <Grid Background="Chartreuse" Grid.Column="2" Grid.RowSpan="3" MouseLeftButtonDown="RightOnLeftButtonDown" MouseLeftButtonUp="RightOnMouseLeftButtonUp" MouseMove="RightOnMouseMove"></Grid>
        <Grid Background="Chartreuse" Grid.Row="2" Grid.ColumnSpan="3" MouseLeftButtonDown="BottomOnLeftButtonDown" MouseLeftButtonUp="BottomOnMouseLeftButtonUp" MouseMove="BottomOnMouseMove"></Grid>

    </Grid>
