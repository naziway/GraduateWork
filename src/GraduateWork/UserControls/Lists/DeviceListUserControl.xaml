<UserControl x:Class="UserControls.Lists.DeviceListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls.Lists"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid HorizontalAlignment="Stretch" ItemsSource="{Binding Devices,IsAsync=True}" AutoGenerateColumns="False" IsReadOnly="True"  VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Width="0.5*" Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Width="*" Header="Марка" Binding="{Binding Marka}"/>
                <DataGridTextColumn Width="*" Header="Модель" Binding="{Binding Model}"/>
                <DataGridTextColumn Width="*" Header="Тип" Binding="{Binding DeviceType}"/>
                <DataGridTextColumn Width="*" Header="Серійний" Binding="{Binding SerialNumber}"/>
                <DataGridTextColumn Width="*" Header="Виготовлений" Binding="{Binding ManufactureDate,StringFormat=d}"/>
                <DataGridTextColumn Width="2*" Header="Власник" Binding="{Binding Client}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
