             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label  HorizontalAlignment="Stretch" VerticalContentAlignment="Bottom" Padding="0" Margin="0"  Name="clock" VerticalAlignment="Bottom" Foreground="White" HorizontalContentAlignment="Stretch"  FontSize="40" FontFamily="Forte" />
    </Grid>
