<UserControl x:Class="UserControls.FindControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Style.Setters>

            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid Background="#4CAF50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="1" Text="{Binding FindText,IsAsync=True,UpdateSourceTrigger=PropertyChanged}">
        </TextBox>
        <Button Grid.Column="2" Command="{Binding FindCommand,UpdateSourceTrigger=PropertyChanged}">Пошук</Button>
        <ComboBox Grid.Column="0" ItemsSource="{Binding FindingParameters}"></ComboBox>

    </Grid>
</UserControl>
